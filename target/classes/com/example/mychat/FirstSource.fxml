<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.mychat.Controller">
    <padding>
        <Insets bottom="4" top="4" left="4" right="4"/>
    </padding>
    <HBox fx:id="loginBox" spacing="5" VBox.vgrow="ALWAYS" alignment="CENTER" >
        <TextField fx:id="loginField" promptText="Login"/>
        <PasswordField fx:id="passwordField" promptText="Password"/>
        <Button text="Auth" defaultButton="true" onAction="#btnAuthClick"/>
    </HBox>
    <HBox fx:id="messageBox" visible="false" spacing="5" VBox.vgrow="ALWAYS" alignment="CENTER" >
        <VBox spacing="5">
            <TextArea fx:id="textArea" VBox.vgrow="ALWAYS" editable="false"/>
            <HBox spacing="5">
                <TextField fx:id="textField" HBox.hgrow="ALWAYS"/>
                <Button text="Send" defaultButton="true" onAction="#sendButton"/>
            </HBox>
        </VBox>
    </HBox>
</VBox>
